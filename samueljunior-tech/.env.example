# Site ID do Hotjar para tracking de usuários
# Obtenha em: https://insights.hotjar.com/sites
VITE_HOTJAR_SITE_ID=6462053

# Versão do script do Hotjar (mantenha 6)
VITE_HOTJAR_VERSION=6

# Debug mode do Hotjar (true/false)
VITE_HOTJAR_DEBUG=false

